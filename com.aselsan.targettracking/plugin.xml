<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.aselsan.targettracking.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.aselsan.targettracking.Perspective"
            id="com.aselsan.targettracking.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.aselsan.targettracking.view.SensorManagerView"
            id="com.aselsan.targettracking.sensormanagerview"
            name="sensormanagerview"
            restorable="true">
      </view>
      <view
            class="com.aselsan.targettracking.view.GISView"
            id="com.aselsan.targettracking.gisview"
            name="gisview"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="com.aselsan.targettracking.sensormanagerview"
               minimized="false"
               ratio="0.5f"
               relationship="stack"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="com.aselsan.targettracking.gisview"
               minimized="false"
               ratio="0.5f"
               relationship="left"
               relative="com.aselsan.targettracking.sensormanagerview">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
